<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card text-center">
        <div class="card-header">
          <h1 class="display-5"><%= @sub_breed.name.capitalize %> (Sub-breed of <%= @breed.name.capitalize %>)</h1>
        </div>
        <div class="card-body">
          <img src="<%= @sub_breed.image_url %>" class="img-fluid rounded mb-3" alt="<%= @sub_breed.name %>" style="height: 250px; width: auto; object-fit: cover;">
        </div>
        <div class="card-footer text-muted">
          <%= link_to 'Back to Breed', breed_path(@breed), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
