<h1>All Dog Breeds</h1>
<div class="container">
  <div class="row">
    <% @breeds.each do |breed| %>
      <div class="col-md-4 mb-4"> <!-- Each breed occupies 1/3 of the row on medium+ screens -->
        <div class="card h-100">
          <%= link_to breed_path(breed) do %>
            <img src="<%= breed.image_url %>" class="card-img-top img-fluid" alt="<%= breed.name %> image" style="height: 200px; object-fit: cover;">
          <% end %>
          <div class="card-body text-center">
            <h5 class="card-title"><%= link_to breed.name, breed_path(breed) %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
